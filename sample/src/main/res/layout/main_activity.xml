<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="zhupff.skins.R"/>
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            skinBackgroundColor="@{R.color.background_color}"
            tools:background="@color/background_color">
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/app_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="16:9"
                                android:scaleType="centerCrop"
                                skinForegroundDrawable="@{R.drawable.akali}"
                                tools:src="@drawable/akali"/>
                            <TextView
                                android:id="@+id/tv_album_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="50dp"
                                android:text="Album List"
                                android:textSize="16sp"
                                skinTextColor="@{R.color.background_color}"
                                tools:textColor="@color/background_color"/>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_album_list"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_album_title"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="50dp"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.appcompat.widget.Toolbar
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="bottom"
                            app:contentInsetStart="0dp"
                            app:contentInsetEnd="0dp"
                            app:layout_collapseMode="pin">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <View
                                    android:id="@+id/v_search_bg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    skinBackgroundColor="@{R.color.main_color}"
                                    tools:background="@color/main_color"/>
                                <FrameLayout
                                    android:id="@+id/search_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp">
                                    <zhupff.skins.CommonLinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        app:common_corner_radius="8dp"
                                        skinBackgroundColor="@{R.color.surface_color}"
                                        tools:background="@color/surface_color">
                                        <View
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="8dp"
                                            android:background="@drawable/icon_search"
                                            skinBackgroundTint="@{R.color.text_color}"
                                            tools:backgroundTint="@color/text_color"/>
                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="24dp"
                                            android:layout_marginStart="8dp"
                                            android:layout_gravity="center_vertical"
                                            skinBackgroundColor="@{R.color.text_color}"
                                            tools:background="@color/text_color"/>
                                        <EditText
                                            android:id="@+id/et_search"
                                            android:layout_width="match_parent"
                                            android:layout_height="24dp"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="8dp"
                                            android:layout_marginEnd="8dp"
                                            android:background="@null"
                                            android:textCursorDrawable="@null"
                                            android:gravity="center_vertical"
                                            android:textSize="16sp"
                                            android:hint="Search"
                                            skinHintColor="@{R.color.outline_color}"
                                            skinTextColor="@{R.color.text_color}"
                                            tools:textColorHint="@color/outline_color"
                                            tools:textColor="@color/text_color"/>
                                    </zhupff.skins.CommonLinearLayout>
                                </FrameLayout>
                            </RelativeLayout>
                        </androidx.appcompat.widget.Toolbar>
                        <ImageView
                            android:id="@+id/iv_skin"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="13dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_menu"
                            app:layout_collapseMode="pin"
                            skinForegroundTint="@{R.color.background_color}"
                            tools:tint="@color/background_color"/>
                    </com.google.android.material.appbar.CollapsingToolbarLayout>
                </com.google.android.material.appbar.AppBarLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_music_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"/>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/side_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            skinBackgroundColor="@{R.color.background_color}"
            tools:background="@color/background_color">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="centerCrop"
                skinForegroundDrawable="@{R.drawable.akali}"
                tools:src="@drawable/akali"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_skin_list"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="16dp"
                android:overScrollMode="never"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>